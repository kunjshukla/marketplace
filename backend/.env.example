# Database Configuration
# For PostgreSQL, use:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/yourdbname
DATABASE_URL=sqlite:///marketplace.db

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Gmail Configuration (for email functionality)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# UPI Configuration for Indian payments
UPI_ID=your-upi-id@upi

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Thirdweb Configuration
THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key_here

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Server Configuration
ENVIRONMENT=development
PORT=8000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
